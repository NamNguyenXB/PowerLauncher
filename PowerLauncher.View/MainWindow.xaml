<Window x:Class="PowerLauncher.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:view="clr-namespace:PowerLauncher.View"
        Title="PowerLauncher" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Name="MainMenu">
            <!-- Menu Items: File, Edit, Help -->
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left section: Launchers -->
            <Frame Name="Launchers" Grid.Column="0"/>

            <!-- Right section: LauncherDetail -->
            <Grid Name="LauncherDetail">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ModuleList -->
                <view:ModuleList Grid.Row="0" x:Name="ModuleListControl" />

                <!-- Config -->
                <view:Config Grid.Row="1" x:Name="ConfigControl" />
            </Grid>
        </Grid>
    </Grid>
</Window>
